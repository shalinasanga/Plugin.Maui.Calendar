<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SampleApp.Views.TestingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:plugin="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
    xmlns:vm="clr-namespace:SampleApp.ViewModels"
    Title="TestingPage"
    x:DataType="vm:TestingPageViewModel">
    <VerticalStackLayout Padding="10" Spacing="10">
        <plugin:Calendar
            Culture="{Binding Culture}"
            DaysTitleMaximumLength="{Binding DaysTitleMaxLength}"
            UseAbbreviatedDayNames="{Binding UseAbbreviatedDayNames}" />

        <Picker
            Title="Select Language"
            ItemDisplayBinding="{Binding DisplayName}"
            ItemsSource="{Binding AvailableCultures}"
            SelectedItem="{Binding Culture}" />
        <Picker
            Title="Select Day Title Length"
            ItemsSource="{Binding DaysTitleMaxLengthOptions}"
            SelectedItem="{Binding DaysTitleMaxLength}" />
        <HorizontalStackLayout Spacing="10">
            <Label Text="Use Abbreviated Day Names" VerticalOptions="Center" />
            <Switch IsToggled="{Binding UseAbbreviatedDayNames}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>